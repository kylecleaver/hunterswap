<p id="notice"><%= notice %></p>

<h1>BIDS</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Offer</th>
      <th>Equipment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= number_to_currency(bid.offer) %></td>
        <td><%= bid.equipment.name %></td>
        <td><%= bid.user.email %></td>
        <td><%= link_to 'Show', bid, :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid), :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to ' Destroy', bid, :class => "btn btn-danger btn-sm fa fa-trash-o fa-lg", method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_bid_path, :class => "btn btn-default btn-lg" %>
 