<h1>Listing Equipment</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Photo</th>
      <th>Estimated value</th>
      <th>Category</th>
      <th>User</th>
      <th>Purchase date</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.description %></td>
        <td><%= equipment.condition %></td>
        <td><%= equipment.photo %></td>
        <td><%= equipment.estimated_value %></td>
        <td><%= equipment.category.name %></td>
        <td><%= equipment.user.email %></td>
        <td><%= equipment.purchase_date %></td>
        <td><%= equipment.city %></td>
        <td><%= equipment.state %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

