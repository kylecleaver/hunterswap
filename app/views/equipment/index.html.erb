<p id="notice"><%= notice %></p>

<h1>EQUIPMENT</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Photo</th>
      <th>Estimated value</th>
      <th>Category</th>
      <th>User</th>
      <th>Purchase date</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.description %></td>
        <td><%= equipment.condition %></td>
        <td><%= image_tag equipment.photo %></td>
        <td><%= number_to_currency(equipment.estimated_value) %></td>
        <td><%= equipment.category.name %></td>
        <td><%= equipment.user.email %></td>
        <td><%= equipment.purchase_date %></td>
        <td><%= equipment.city %></td>
        <td><%= equipment.state %></td>
        <td><%= link_to 'Show', equipment, :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment), :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to ' Destroy', equipment, :class => "btn btn-danger btn-sm fa fa-trash-o fa-lg", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Equipment', new_equipment_path, :class => "btn btn-default btn-lg" %>
