<p id="notice"><%= notice %></p>

<h1>CATEGORIES</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>

        <td><%= link_to 'Show', category, :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => "btn btn-default btn-sm"%></td>
        <td><%= link_to ' Destroy', category, :class => "btn btn-danger btn-sm fa fa-trash-o fa-lg", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => "btn btn-default btn-lg" %>
